{
  "name": "Shopify Meta JSON",
  "description": "Easily view the JSON for Products, variants, and metafields",
  "homepage_url": "https://github.com/enginedigital/shopify-meta-json",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_title": "Shopify Meta JSON",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "script.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://*.myshopify.com/admin/products/*",
    "https://*.myshopify.com/admin/products/*/variants/*"
  ]
}
